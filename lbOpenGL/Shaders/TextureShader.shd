#Shader Vertex
#version 330

layout(location = 0) in vec3 vPos;
layout(location = 1) in vec2 vUVs;

out vec2 UVs;

void main()
{
    gl_Position = vec4(vPos, 1.0);
    UVs = vUVs;
}

#Shader Fragment
#version 330

uniform sampler2D textureSampler;

in vec2 UVs;

void main()
{
    gl_FragColor = texture(textureSampler, UVs);
}
